{
  "manifest_version": 2,

  "name": "Chromaria2",
  "description": "Chrome extension for aria2",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icons/48.png",
    "default_popup": "settings.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "downloads",
    "notifications",
    "http://*/"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
	  "16": "icons/16.png",
	  "48": "icons/48.png",
	  "128": "icons/128.png"
   }
}
